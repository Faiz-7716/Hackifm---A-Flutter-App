# ==================== SECURITY CONFIGURATION ====================
# CRITICAL: Change these values in production!

# Flask Secret Key (used for session management)
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Secret Key (used for token signing)
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database URL
# For SQLite (development):
DATABASE_URL=sqlite:///hackifm.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/hackifm_db

# For MySQL (production):
# DATABASE_URL=mysql://username:password@localhost:3306/hackifm_db

# ==================== EMAIL CONFIGURATION (Optional) ====================
# For sending OTP emails

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ==================== APP CONFIGURATION ====================

# Flask Environment (development/production)
FLASK_ENV=development

# Debug Mode (set to False in production)
FLASK_DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=5000

# ==================== FRONTEND CONFIGURATION ====================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ==================== SECURITY SETTINGS ====================

# JWT Token Expiry (in hours)
JWT_ACCESS_TOKEN_EXPIRES=24

# OTP Expiry (in minutes)
OTP_EXPIRY_MINUTES=10

# Password Reset Token Expiry (in minutes)
RESET_TOKEN_EXPIRY_MINUTES=10

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_STORAGE_URL=memory://

# ==================== NOTES ====================
# 1. Never commit this file to version control
# 2. Use different values for development and production
# 3. Generate secure random strings for SECRET_KEY and JWT_SECRET_KEY
# 4. Use strong passwords for database connections
# 5. Enable HTTPS in production
